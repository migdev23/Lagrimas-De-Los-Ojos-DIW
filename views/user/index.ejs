<div class="container mt-5">
    <h1 class="text-center mb-4">
        <i class="bi bi-person-circle"></i> ¡Hola, <%= user.username %>!
    </h1>

    <div class="row justify-content-center">
        <!-- Tarjeta para gestionar reservas -->
        <div class="col-md-5 mb-4">
            <div class="card text-center shadow-lg">
                <div class="card-body">
                    <i class="bi bi-calendar-check fs-1 text-primary"></i>
                    <h5 class="card-title mt-3">Gestionar mis reservas</h5>
                    <p class="card-text">Consulta, modifica o cancela tus reservas en cualquier momento.</p>
                    <a href="/me/reservas" class="btn btn-primary">Ir a reservas</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta para gestionar préstamos -->
        <div class="col-md-5 mb-4">
            <div class="card text-center shadow-lg">
                <div class="card-body">
                    <i class="bi bi-box-arrow-in-up-right fs-1 text-success"></i>
                    <h5 class="card-title mt-3">Gestionar mis préstamos</h5>
                    <p class="card-text">Consulta el estado de los préstamos realizados o devolver productos.</p>
                    <a href="/me/prestamos" class="btn btn-success">Ir a préstamos</a>
                </div>
            </div>
        </div>
    </div>
</div>
