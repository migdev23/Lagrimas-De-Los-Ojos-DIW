                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/admin/reservas/"><i
                                                class="bi bi-calendar2-check-fill"></i> Gestionar
                                            Reservas</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/admin/semillas/"><i class="bi bi-flower3"></i>
                                            Gestionar Semillas</a>
                                    </li>
                                    <% } %>

                                        <!-- Opciones para usuario -->
