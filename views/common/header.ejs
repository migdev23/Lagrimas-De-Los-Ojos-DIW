</header>

<!-- Alerta para mensaje si existe -->
<% if (message) { %>
    <div class="alert alert-info alert-dismissible fade show" role="alert" id="alertBox">
        <div class="d-flex justify-content-between">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle-fill me-2"></i>
                <strong>Información:</strong>
                <%= message %>
            </div>
            <div class="d-flex align-items-center">
                <i class="bi bi-hourglass-split me-2"></i>
                <span id="counter" class="counter">10</span> segundos
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <!-- Alerta para mensaje de redirección -->
        <% if (info) { %>
            <div class="alert alert-info alert-effect alert-dismissible fade show" role="alert" id="alertBox">
                <div class="d-flex justify-content-between">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Información:</strong>
                        <%= info %>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>