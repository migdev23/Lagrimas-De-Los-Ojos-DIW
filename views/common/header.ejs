                                <!-- Opciones para admin -->
                                <% if (user.rol==='admin' ) { %>
                                    <li>
                                        <a class="dropdown-item" href="/admin/"><i class="bi bi-grid-fill"></i> Panel
                                            General</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/admin/usuarios"><i class="bi bi-people-fill"></i> Panel de
